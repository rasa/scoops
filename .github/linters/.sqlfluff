# ./github/linters/.sqlfluff

[sqlfluff]
dialect = sqlite
# exclude_rules = L005,L010,L016,L019,L034,L036
max_line_length = 132 # default: 80
warnings = LT03 # Found trailing binary operator. Expected only leading near line breaks. [layout.operators]

[sqlfluff:indentation]
indent_unit = space
tab_space_size = 2

[sqlfluff:rules:layout.indent]
# Indentation not enforced
